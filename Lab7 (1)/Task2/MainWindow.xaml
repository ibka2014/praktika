        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="74*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Сумма в валюте №1" HorizontalAlignment="Left" Margin="20,25,0,0" VerticalAlignment="Top"/>
