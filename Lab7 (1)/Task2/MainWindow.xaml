        <TextBox x:Name="kursBox" HorizontalAlignment="Left" Margin="24,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193" TextAlignment="Center" FontSize="18" Grid.ColumnSpan="2"/>
        <Label Content="Курс обмена на валюту №2" Margin="19,81,59,0" VerticalAlignment="Top" RenderTransformOrigin="0.419,0.233" Grid.ColumnSpan="2"/>
        <TextBox x:Name="summaBox" HorizontalAlignment="Left" Margin="23,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" FontSize="18" Grid.ColumnSpan="2" TextAlignment="Center"/>

    </Grid>
</Window>
